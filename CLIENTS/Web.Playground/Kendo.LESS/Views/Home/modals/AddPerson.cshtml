@{ Layout = null; }



<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add Person</h4>
        </div>
        <form onsubmit="AddPerson.Save()">
            <div class="modal-body">

                <div class="form-group">
                    <label for="mdl_txt_firstName">First Name</label>
                    <input id="mdl_txt_firstName" type="text" class="form-control" placeholder="First Name" />
                </div>

                <div class="form-group">
                    <label for="mdl_txt_lastName">Last Name</label>
                    <input id="mdl_txt_lastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
            </div>



            <div class="modal-footer">
                <div class="checkbox checkbox-primary pull-left">
                    <input id="mdl_chk_keepOpen" class="styled" type="checkbox" checked />
                    <label for="mdl_chk_keepOpen">Create another</label>
                </div>

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
            </div>
        </form>
    </div>
</div>

<script src="~/Scripts/modules/AddPerson.js"></script>
